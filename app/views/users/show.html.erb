<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
        <%= render 'users/info', user: @user %>
      <td><%= render 'relationships/follow_button', user: @user %>　</td>
    </div>
  </div>
</div>
<div class='col-md-11 offset-md-1'>
<div class="card-list-container py-0">
  <% @bars.each do |bar| %>
  <div class="card w-50 mx-auto mt-0 shadow-lg">
    <%= link_to bar_path(bar.id) do %>
      <%= attachment_image_tag bar, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag bar.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(bar_path(bar.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= bar.bar_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= bar.caption %></p>
          <span><i class="fas fa-user"></i> By <%= bar.user.name %> ｜ </span>
          <span><%= link_to "#{bar.comments.count} コメント", bar_path(bar.id), class:"text-dark" %> ｜ </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<%= paginate @bars %>
</div>
</div>

