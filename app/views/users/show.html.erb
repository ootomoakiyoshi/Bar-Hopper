<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<% @bars.each do |bar| %>
<div>
  <%= link_to bar_path(bar.id) do %>
  <%= attachment_image_tag bar, :image, :fill, 400, 400  %>
  <% end %>
  <p>店名：<%= bar.bar_name %></p>
  <p>説明：<%= bar.caption %></p>
  <p>ユーザーネーム：<%= bar.user.name %></p>
</div>
<% end %>
<%= paginate @bars %>
