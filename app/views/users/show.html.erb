<div>
  <h3><%= @user.name %></h3>

<% @bars.each do |bar| %>
<div>
  <%= link_to bar_path(bar.id) do %>
  <%= attachment_image_tag bar, :image %>
  <% end %>
  <p>店名：<%= bar.bar_name %></p>
  <p>説明：<%= bar.caption %></p>
  <p>ユーザーネーム：<%= bar.user.name %></p>
</div>
<% end %>
<%= paginate @bars %>
