<table class='table table-hover table-inverse'>

<div class="container">
 <h1 class="text-center">Bar 一覧</h>
<table>
 <% @bars.each do |bar| %>
  <tr>
    <th> <%= link_to bar_path(bar.id) do %>
        <%= attachment_image_tag bar, :image, :fill, 350, 350  %>
      <tb>店名：<%= bar.bar_name %></tb>
      <% end %>
      <tb>説明：<%= bar.caption %></tb>
      <tb>Name：<%= bar.user.name %></tb>
      <tb><%= link_to "#{bar.comments.count} コメント", bar_path(bar.id) %></tb>
      <tb id="favorite_buttons_<%= bar.id %>">
       <%= render "favorites/favorite", bar: bar %>
      </tb>
           <% end %>
          <%= paginate @bars %>
    </th>
   </tr>
</table>