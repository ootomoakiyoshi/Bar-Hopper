<h1>Editing Bar</h1>

<%= form_with model:@bar,local:true do |f| %>
<div class="form-group">
  <%= f.label :bar_name %>
  <%= f.text_field :bar_name, class: 'form-control book_title' %>
</div>
<div class="form-group">
  <%= f.label :caption %>
  <%= f.text_area :caption, class: 'form-control book_body' %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-success' %>
</div>
<div>
<%= link_to 'Show', bar_path(@bar), class: "bark_#{@bar.id}" %> |
<%= link_to 'Back', bars_path, class: "back" %>
</div>
<% end %>